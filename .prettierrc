{
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "none",
	"printWidth": 100,

	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"",
		"^\\$lib/(.*)$",
		"",
		"^(?!.*[.]css$)[./].*$",
		"",
		".css$",
		"",
		"^[.]"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
